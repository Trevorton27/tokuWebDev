// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTH
// ============================================

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  clerkId       String?   @unique  // Clerk user ID for authentication
  email         String    @unique
  name          String?
  password      String?   // hashed (optional for Clerk users)
  role          Role      @default(STUDENT)
  avatarUrl     String?
  adminNotes    String?   @db.Text  // Admin notes about the user (for students)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  enrollments   Enrollment[]
  attempts      Attempt[]
  masteryEvents MasteryEvent[]
  skillMasteries UserSkillMastery[]
  assessmentSessions AssessmentSession[]
  coursesCreated Course[]  @relation("InstructorCourses")
  roadmapItems  StudentRoadmap[] @relation("UserRoadmaps")

  @@index([email])
  @@index([clerkId])
}

// ============================================
// LMS DOMAIN
// ============================================

model Course {
  id           String    @id @default(cuid())
  title        String
  description  String
  thumbnailUrl String?
  instructorId String
  published    Boolean   @default(false)
  maxStudents  Int?      // null = unlimited
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  instructor   User       @relation("InstructorCourses", fields: [instructorId], references: [id], onDelete: Cascade)
  lessons      Lesson[]
  enrollments  Enrollment[]

  @@index([instructorId])
  @@index([published])
}

model Lesson {
  id          String    @id @default(cuid())
  courseId    String
  title       String
  content     String    @db.Text  // Rich text/markdown
  order       Int
  videoUrl    String?
  duration    Int?      // minutes
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  documents   Document[] @relation("LessonDocuments")

  @@index([courseId, order])
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  DROPPED
}

model Enrollment {
  id          String           @id @default(cuid())
  userId      String
  courseId    String
  status      EnrollmentStatus @default(ACTIVE)
  enrolledAt  DateTime         @default(now())
  completedAt DateTime?
  progress    Int              @default(0)  // 0-100

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

// ============================================
// ASSESSMENT DOMAIN
// ============================================

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  CPP
  TYPESCRIPT
  GO
  RUST
}

model Challenge {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  description String     @db.Text
  difficulty  Difficulty
  language    Language
  starterCode String     @db.Text
  solution    String     @db.Text
  tags        String[]   // ['arrays', 'loops', 'recursion']
  hints       String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  testCases   TestCase[]
  attempts    Attempt[]

  @@index([difficulty])
  @@index([language])
}

model TestCase {
  id             String   @id @default(cuid())
  challengeId    String
  input          String   @db.Text
  expectedOutput String   @db.Text
  isHidden       Boolean  @default(false)
  weight         Int      @default(1)
  createdAt      DateTime @default(now())

  // Relations
  challenge      Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@index([challengeId])
}

model Attempt {
  id          String   @id @default(cuid())
  userId      String
  challengeId String
  code        String   @db.Text
  passed      Boolean
  score       Int      @default(0)  // 0-100
  timeSpent   Int      // seconds
  hintsUsed   Int      @default(0)
  attemptedAt DateTime @default(now())

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([challengeId])
  @@index([attemptedAt])
}

enum MasteryEventType {
  ATTEMPT
  SUCCESS
  FAILURE
  HINT
}

model MasteryEvent {
  id        String           @id @default(cuid())
  userId    String
  skillTag  String           // e.g., 'arrays', 'loops', 'recursion'
  event     MasteryEventType
  metadata  Json?            // Additional context
  timestamp DateTime         @default(now())

  // Relations
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, skillTag])
  @@index([timestamp])
}

// Persistent skill mastery with confidence tracking
model UserSkillMastery {
  id         String   @id @default(cuid())
  userId     String
  skillKey   String   // matches skill tag key (e.g., 'js_arrays', 'css_layout')
  mastery    Float    @default(0) // 0-1 proficiency score
  confidence Float    @default(0) // 0-1 how confident we are in this score
  attempts   Int      @default(0) // total graded interactions for this skill
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, skillKey])
  @@index([userId])
  @@index([skillKey])
}

// Assessment session for intake/placement flow
model AssessmentSession {
  id          String    @id @default(cuid())
  userId      String
  sessionType String    @default("INTAKE") // INTAKE | PLACEMENT | SKILL_CHECK
  status      String    @default("IN_PROGRESS") // IN_PROGRESS | COMPLETED | ABANDONED
  currentStep String?   // current step identifier
  stepData    Json?     // stored answers and intermediate state per step
  metadata    Json?     // additional session metadata
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses   AssessmentResponse[]

  @@index([userId])
  @@index([status])
  @@index([sessionType])
}

// Individual step responses within an assessment session
model AssessmentResponse {
  id           String   @id @default(cuid())
  sessionId    String
  stepId       String   // matches step config id
  stepKind     String   // QUESTIONNAIRE | MCQ | SHORT_TEXT | CODE | DESIGN
  rawAnswer    Json     // the user's submitted answer
  gradeResult  Json?    // grading outcome (score, feedback, etc.)
  skillUpdates Json?    // which skills were updated and by how much
  submittedAt  DateTime @default(now())

  // Relations
  session      AssessmentSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, stepId])
  @@index([sessionId])
  @@index([stepId])
}

// ============================================
// KNOWLEDGE RAG DOMAIN
// ============================================

enum DocumentType {
  LESSON
  DOCUMENTATION
  SOLUTION
  ARTICLE
  DISCUSSION
}

model Document {
  id          String       @id @default(cuid())
  title       String
  content     String       @db.Text
  type        DocumentType
  sourceUrl   String?
  metadata    Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  chunks      DocumentChunk[]
  lesson      Lesson?      @relation("LessonDocuments", fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId    String?

  @@index([type])
}

model DocumentChunk {
  id          String   @id @default(cuid())
  documentId  String
  content     String   @db.Text
  chunkIndex  Int
  embedding   Float[]  // Vector embedding - use pgvector extension in production
  metadata    Json?
  createdAt   DateTime @default(now())

  // Relations
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  // For pgvector: @@index([embedding], type: Gist)
}

// ============================================
// STUDENT ROADMAP DOMAIN
// ============================================

enum RoadmapItemType {
  COURSE          // Course in learning journey
  SKILL           // Skill to develop
  PROJECT         // Project to complete
  EXERCISE        // Coding exercise or challenge
  READING         // Documentation or article to read
  DESIGN          // Design task or critique
  MILESTONE       // Achievement milestone
}

enum RoadmapStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

model StudentRoadmap {
  id             String         @id @default(cuid())
  userId         String
  title          String
  description    String?        @db.Text
  itemType       RoadmapItemType
  status         RoadmapStatus  @default(NOT_STARTED)
  phase          Int            @default(1)  // Learning phase (1, 2, 3...)
  order          Int
  skillKeys      String[]       // Skills this item targets
  difficulty     Int            @default(1)  // 1-5 difficulty rating
  estimatedHours Int            @default(1)  // Estimated time to complete
  targetDate     DateTime?
  completedAt    DateTime?
  metadata       Json?          // Additional data like courseId, resourceUrl, etc.
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  // Relations
  user           User           @relation("UserRoadmaps", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([userId, phase, order])
}
