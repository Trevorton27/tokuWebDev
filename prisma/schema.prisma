generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(cuid())
  clerkId            String?              @unique
  email              String               @unique
  name               String?
  password           String?
  role               Role                 @default(STUDENT)
  avatarUrl          String?
  adminNotes         String?
  githubUsername     String?
  githubRepoUrl      String?
  lastActiveAt       DateTime?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  attempts           Attempt[]
  coursesCreated     Course[]             @relation("InstructorCourses")
  enrollments        Enrollment[]
  masteryEvents      MasteryEvent[]
  roadmapItems       StudentRoadmap[]     @relation("UserRoadmaps")
  assessmentSessions AssessmentSession[]
  skillMasteries     UserSkillMastery[]   @relation("UserSkillMasteries")
  loginSessions      LoginSession[]       @relation("UserLoginSessions")
  githubEvents       GitHubEvent[]        @relation("UserGitHubEvents")
  activityMetrics    ActivityMetric[]     @relation("UserActivityMetrics")

  @@index([email])
  @@index([clerkId])
}

model Course {
  id           String       @id @default(cuid())
  title        String
  description  String
  thumbnailUrl String?
  instructorId String
  published    Boolean      @default(false)
  maxStudents  Int?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  instructor   User         @relation("InstructorCourses", fields: [instructorId], references: [id], onDelete: Cascade)
  enrollments  Enrollment[]
  lessons      Lesson[]

  @@index([instructorId])
  @@index([published])
}

model Lesson {
  id        String     @id @default(cuid())
  courseId  String
  title     String
  content   String
  order     Int
  videoUrl  String?
  duration  Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  documents Document[] @relation("LessonDocuments")
  course    Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId, order])
}

model Enrollment {
  id          String           @id @default(cuid())
  userId      String
  courseId    String
  status      EnrollmentStatus @default(ACTIVE)
  enrolledAt  DateTime         @default(now())
  completedAt DateTime?
  progress    Int              @default(0)
  course      Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

model Challenge {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  description String
  difficulty  Difficulty
  language    Language
  starterCode String
  solution    String
  tags        String[]
  hints       String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  attempts    Attempt[]
  testCases   TestCase[]

  @@index([difficulty])
  @@index([language])
}

model TestCase {
  id             String    @id @default(cuid())
  challengeId    String
  input          String
  expectedOutput String
  isHidden       Boolean   @default(false)
  weight         Int       @default(1)
  createdAt      DateTime  @default(now())
  challenge      Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@index([challengeId])
}

model Attempt {
  id          String    @id @default(cuid())
  userId      String
  challengeId String
  code        String
  passed      Boolean
  score       Int       @default(0)
  timeSpent   Int
  hintsUsed   Int       @default(0)
  attemptedAt DateTime  @default(now())
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([challengeId])
  @@index([attemptedAt])
}

model MasteryEvent {
  id        String           @id @default(cuid())
  userId    String
  skillTag  String
  event     MasteryEventType
  metadata  Json?
  timestamp DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, skillTag])
  @@index([timestamp])
}

model Document {
  id        String          @id @default(cuid())
  title     String
  content   String
  type      DocumentType
  sourceUrl String?
  metadata  Json?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  lessonId  String?
  lesson    Lesson?         @relation("LessonDocuments", fields: [lessonId], references: [id], onDelete: Cascade)
  chunks    DocumentChunk[]

  @@index([type])
}

model DocumentChunk {
  id         String   @id @default(cuid())
  documentId String
  content    String
  chunkIndex Int
  embedding  Float[]
  metadata   Json?
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

model StudentRoadmap {
  id             String          @id @default(cuid())
  userId         String
  title          String
  description    String?
  itemType       RoadmapItemType
  status         RoadmapStatus   @default(NOT_STARTED)
  phase          Int             @default(1)
  order          Int
  difficulty     Int?
  estimatedHours Int?
  skillKeys      String[]
  targetDate     DateTime?
  completedAt    DateTime?
  metadata       Json?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  user           User            @relation("UserRoadmaps", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([userId, order])
}

model AssessmentSession {
  id          String               @id @default(cuid())
  userId      String
  sessionType String
  status      String
  currentStep String?
  startedAt   DateTime             @default(now())
  completedAt DateTime?
  metadata    Json?
  user        User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses   AssessmentResponse[]

  @@index([userId, sessionType])
  @@index([status])
}

model AssessmentResponse {
  id           String            @id @default(cuid())
  sessionId    String
  stepId       String
  stepKind     String
  rawAnswer    Json
  gradeResult  Json?
  skillUpdates Json?
  submittedAt  DateTime          @default(now())
  session      AssessmentSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, stepId])
  @@index([sessionId])
}

model UserSkillMastery {
  id         String   @id @default(cuid())
  userId     String
  skillKey   String
  mastery    Float    @default(0)
  confidence Float    @default(0)
  attempts   Int      @default(0)
  lastUpdate DateTime @default(now())
  updatedAt  DateTime @updatedAt
  source     String?
  user       User     @relation("UserSkillMasteries", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, skillKey])
  @@index([userId])
  @@index([skillKey])
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  CPP
  TYPESCRIPT
  GO
  RUST
}

enum MasteryEventType {
  ATTEMPT
  SUCCESS
  FAILURE
  HINT
}

enum DocumentType {
  LESSON
  DOCUMENTATION
  SOLUTION
  ARTICLE
  DISCUSSION
}

enum RoadmapItemType {
  COURSE
  SKILL
  PROJECT
  MILESTONE
  EXERCISE
  DESIGN
}

enum RoadmapStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  DROPPED
}

model LoginSession {
  id           String    @id @default(cuid())
  userId       String
  loginAt      DateTime  @default(now())
  logoutAt     DateTime?
  lastActivity DateTime  @default(now())
  ipAddress    String?
  userAgent    String?
  deviceType   String?
  browser      String?
  isActive     Boolean   @default(true)
  sessionToken String?   @unique
  metadata     Json?
  user         User      @relation("UserLoginSessions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loginAt])
  @@index([isActive])
  @@index([userId, loginAt])
}

model GitHubEvent {
  id           String   @id @default(cuid())
  userId       String
  eventType    String
  action       String?
  repository   String
  repoUrl      String?
  payload      Json
  commitCount  Int?
  additions    Int?
  deletions    Int?
  branch       String?
  timestamp    DateTime @default(now())
  user         User     @relation("UserGitHubEvents", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@index([timestamp])
  @@index([userId, timestamp])
}

model ActivityMetric {
  id         String   @id @default(cuid())
  userId     String
  metricType String
  value      Float
  date       DateTime @default(now())
  period     String
  metadata   Json?
  user       User     @relation("UserActivityMetrics", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, metricType, date, period])
  @@index([userId])
  @@index([metricType])
  @@index([date])
}
