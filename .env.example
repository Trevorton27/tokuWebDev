# Database
DATABASE_URL="postgresql://user:password@localhost:5432/signal_works_lms?schema=public"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk URLs (optional - customize sign in/up pages)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# JDoodle API (for code execution)
JDOODLE_CLIENT_ID="your-jdoodle-client-id"
JDOODLE_CLIENT_SECRET="your-jdoodle-client-secret"

# Anthropic API
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Anthropic Chat (Claude)
AI_TUTOR_API_URL="https://api.anthropic.com/v1/messages"
AI_TUTOR_MODEL="claude-3-5-sonnet-latest"  # or claude-3-5-haiku-latest, claude-3-opus-latest, etc.

# Anthropic Embeddings (using Voyage AI as Anthropic doesn't provide embeddings)
EMBEDDINGS_API_URL="https://api.voyageai.com/v1/embeddings"
EMBEDDINGS_API_KEY="your-voyage-api-key"  # Alternative: Use Voyage AI for embeddings
EMBEDDINGS_MODEL="voyage-2"  # or voyage-large-2, voyage-code-2

# Vector Database (optional, if using external service)
# PINECONE_API_KEY="your-pinecone-key"
# PINECONE_ENVIRONMENT="your-environment"
# PINECONE_INDEX="signal-works-knowledge"

# Encryption (for sensitive data like webhook tokens)
ENCRYPTION_SECRET="your-random-32-character-secret-key-here"

# GitHub Integration
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# IMPORTANT: GitHub Personal Access Token (Highly Recommended)
# Without this token, GitHub API limits you to 60 requests/hour (you'll hit rate limits quickly!)
# With this token, you get 5,000 requests/hour
#
# How to create:
# 1. Go to https://github.com/settings/tokens
# 2. Click "Generate new token (classic)"
# 3. Name: "Signal Works LMS"
# 4. Scopes needed: public_repo, read:user
# 5. Generate and copy the token here:
GITHUB_PERSONAL_ACCESS_TOKEN="ghp_your_github_token_here"

# Cron Job Security (optional)
CRON_SECRET="your-cron-secret-for-scheduled-tasks"

# Security
IP_HASH_SALT="your-random-salt-for-ip-hashing"
